# Open Interpreter Production Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# LLM API Keys (Required - at least one)
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===========================================
# Integration API Keys (Optional)
# ===========================================
# Composio - 250+ app integrations
COMPOSIO_API_KEY=your-composio-api-key

# Notion - Knowledge management
NOTION_API_KEY=your-notion-integration-secret
NOTION_DATABASE_ID=your-database-id

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
LMC_PORT=8000
DASHBOARD_PORT=5000
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# Agent Mail + Beads Configuration
# ===========================================
AGENT_MAIL_PATH=./data/mail
BEADS_PATH=./data/beads
FILE_RESERVATIONS_ENFORCEMENT_ENABLED=true

# ===========================================
# OpenClaw Workflows Configuration
# ===========================================
# Telegram bot token for notifications
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Discord bot token
DISCORD_BOT_TOKEN=your-discord-bot-token

# ===========================================
# Database (Optional - for scaling)
# ===========================================
REDIS_URL=redis://redis:6379/0
DATABASE_URL=postgresql://user:password@localhost:5432/interpreter

# ===========================================
# Security
# ===========================================
# Enable HTTPS in production
ENABLE_HTTPS=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# CORS settings
CORS_ORIGINS=*
